<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@color/white</item> <!-- For toolbar three dot menu color -->
        <item name="colorOnSecondary">@color/white</item> <!-- For floating action button icon -->

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarChatTitleCustomFontStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/helveticaneue_med</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitleCustomFontStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/helveticaneu_light</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
