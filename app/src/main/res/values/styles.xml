<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@color/white
        </item> <!-- For toolbar three dot menu color -->
        <item name="colorOnSecondary">@color/white</item> <!-- For floating action button icon -->

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">@mipmap/ic_app_icon_foreground</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarChatTitleCustomFontStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/helveticaneue_med</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ContactInfoCollapsedTitleTA" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/helveticaneue_med</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
