<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Fragment.ChatsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/f_chats_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/f_chats_tv_no_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:drawableTop="@drawable/ic_chat_white_48dp"
        android:drawablePadding="12dp"
        android:drawableTint="@color/secondary_text_material_light"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="64dp"
        android:text="@string/text_start_new_conversation"
        android:textAlignment="center"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>