<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activity.GroupInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/a_group_info_abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/a_group_info_ctl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="noScroll">

            <FrameLayout
                android:id="@+id/a_group_info_fl"
                android:layout_width="match_parent"
                android:layout_height="296dp">

                <ImageView
                    android:id="@+id/a_group_info_iv_group_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile_picture"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5" />

                <View
                    android:id="@+id/a_group_info_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/a_group_info_et_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="18dp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_mode_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    android:maxLength="27"
                    android:padding="16dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/a_group_info_tv_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </FrameLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/a_group_info_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/a_group_info_tv_change_group_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_camera_alt_white_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/white" />

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:drawableTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:maxLength="42"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/text_members"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/a_group_info_rv_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>