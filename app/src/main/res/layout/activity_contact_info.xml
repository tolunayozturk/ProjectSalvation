<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context=".Activity.ContactInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/a_contact_info_abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/a_contact_info_ctl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="noScroll">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="296dp">

                <ImageView
                    android:id="@+id/a_contact_info_iv_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile_picture"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5" />

                <View
                    android:id="@+id/a_contact_info_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/a_contact_info_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="18dp"
                    android:padding="16dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/a_contact_info_tv_last_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </FrameLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/a_contact_info_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:drawableTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:maxLength="42"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/text_phone_and_status"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/a_contact_info_tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:drawableTint="@color/colorAccent"
        android:gravity="center_vertical"
        android:maxLength="42"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textIsSelectable="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/a_contact_info_tv_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:drawableTint="@color/colorAccent"
        android:gravity="center_vertical"
        android:maxLength="42"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textIsSelectable="true"
        android:textSize="18sp" />

</LinearLayout>