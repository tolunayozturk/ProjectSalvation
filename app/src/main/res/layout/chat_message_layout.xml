<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_chat_messages_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/l_chat_messages_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        app:cardBackgroundColor="#d8f4c6"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:id="@+id/l_chat_message_btn_voice_attachment"
                style="@style/Widget.App.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                app:icon="@drawable/ic_play_arrow_black_24dp"
                app:iconPadding="10dp"
                app:iconSize="32dp"
                app:iconTint="@color/icon_grey"
                tools:text="1:35"
                tools:visibility="gone" />

            <FrameLayout
                android:id="@+id/l_chat_message_fl"
                android:layout_width="296dp"
                android:layout_height="296dp"
                android:layout_gravity="center"
                tools:visibility="gone">

                <ImageView
                    android:id="@+id/l_chat_message_iv_image_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/EMPTY_STRING"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/default_profile_picture" />

                <Button
                    android:id="@+id/l_chat_message_btn_video_play"
                    style="@style/Widget.App.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_play_circle_filled_black_24dp"
                    app:iconSize="48dp"
                    app:iconTint="#000000"
                    tools:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/l_chat_message_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:autoLink="all"
                android:linksClickable="true"
                android:maxWidth="296dp"
                android:minWidth="64dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="@{chatMessageVM.iMessage.message}"
                android:textIsSelectable="true"
                tools:text="Lorem ipsum dotsem expecto patronum" />

            <TextView
                android:id="@+id/l_chat_message_tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:text="11:21 AM" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>