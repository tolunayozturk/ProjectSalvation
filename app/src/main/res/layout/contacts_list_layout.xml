<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_contacts_list_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/l_contacts_list_civ_profile_photo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        tools:src="@drawable/default_profile_picture" />

    <TextView
        android:id="@+id/l_contacts_list_tv_num_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/icon_grey"
        tools:text="MOBILE" />

    <TextView
        android:id="@+id/l_contacts_list_tv_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/l_contacts_list_tv_num_type"
        android:layout_toEndOf="@id/l_contacts_list_civ_profile_photo"
        android:ellipsize="end"

        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Tolunay ÖZTÜRK" />

    <TextView
        android:id="@+id/l_contacts_list_tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_contacts_list_tv_display_name"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@id/l_contacts_list_civ_profile_photo"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Hey there! I'm using PigeoTalk." />

</RelativeLayout>